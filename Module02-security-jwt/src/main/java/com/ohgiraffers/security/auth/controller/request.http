POST http://localhost:8080/api/auth/signup
Content-Type: application/json
Accept: application/json

{
  "username": "newUserTest01",
  "password": "password123456",
  "email": "testuser@example.com",
  //  "roles": ["ROLE_USER"]
    "roles": ["ROLE_ADMIN"]
}

